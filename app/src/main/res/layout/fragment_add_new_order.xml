<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrayLow"
    tools:context=".fragment.customers.FrgDialogAddCustomer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textMenuSelect"
            android:gravity="left|center_vertical"
            android:text="《 Quay lại"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <Button
            android:paddingRight="@dimen/_10sdp"
            android:id="@+id/btnAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@color/textMenuSelect"
            android:text="@string/add_orders"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        tools:ignore="UselessLeaf">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewCount">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="ScrollViewSize">

                <RelativeLayout
                    android:padding="@dimen/_3sdp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_cart_null"/>
                </RelativeLayout>
                <LinearLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_customer"
                        android:textSize="@dimen/_13sdp"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableRight="@drawable/ic_arrow_right" />

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn giá bán"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableRight="@drawable/ic_arrow_right" />

                </LinearLayout>

                <GridLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:text="Tổng số lương hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="right"
                        android:text="50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Tổng số tiền hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="right"
                        android:text="5.000.000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Khuyến mãi/Giảm giá"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="right"
                        android:text="50000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Phí giao hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="right"
                        android:text="30000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Tổng tiền đơn hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/_13sdp"
                        android:layout_gravity="right"
                        android:text="4.980.000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </GridLayout>

                <LinearLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn phương thức thanh toán"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableRight="@drawable/ic_arrow_right" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>